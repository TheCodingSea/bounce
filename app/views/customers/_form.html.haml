= form_for @customer do |f|
  - if @customer.errors.any?
    #error_explanation
      %h2= "#{pluralize(@customer.errors.count, "error")} prohibited this customer from being saved:"
      %ul
        - @customer.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :customer_id
    = f.text_field :customer_id
  .field
    = f.label :email
    = f.text_field :email
  .actions
    = f.submit 'Save'
