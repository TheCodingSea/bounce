.panel.panel-default.product-panel
  .panel-body
    .row
      .col-sm-6
        .product-image.pull-left
          =image_tag product.photo.url, class: "img-responsive"
      .col-sm-6
        .page-header
          %h1 #{product.name} <small>#{number_to_currency product.price}</small>
        %p.lead
          =product.size
    .row
      .col-sm-3.col-sm-offset-9
        %a.btn.btn-primary.btn-lg.btn-block{href: product_path(product)} More Info
