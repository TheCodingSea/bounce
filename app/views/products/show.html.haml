%p#notice= notice

.row
  .col-md-12
    .panel.panel-default
      .panel-body
        .row
          .col-sm-6
            .page-header
              %h1 #{@product.name} <small>#{number_to_currency @product.price}</small>
            %p.lead
              = @product.description
            /%a.btn.btn-success{href: add_to_sale_path(@product)} Reserve
            /=form_for LineItem.new do |f|
            /  =f.submit "Reserve", class: "btn btn-success"
            =button_to "Reserve", line_items_path(line_item: { product_id: @product.id }), class: "btn btn-success"
          .col-sm-6
            .product-image.pull-right
              = image_tag @product.photo.url, class: "img-response"
