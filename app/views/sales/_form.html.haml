= form_for @sale do |f|
  - if @sale.errors.any?
    #error_explanation
      %h2= "#{pluralize(@sale.errors.count, "error")} prohibited this sale from being saved:"
      %ul
        - @sale.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    .col-sm-2
      = f.label :subtotal, class: "control-label"
    .col-sm-10
      = f.text_field :subtotal, class: "form-control"
  .form-group
    .col-sm-2
      = f.label :tax, class: "control-label"
    .col-sm-10
      = f.text_field :tax, class: "form-control"
  .form-group
    .col-sm-2
      = f.label :total, class: "control-label"
    .col-sm-10
      = f.text_field :total, class: "form-control"
  .form-group
    .col-sm-12
      = f.submit 'Save', class: "btn btn-success"
